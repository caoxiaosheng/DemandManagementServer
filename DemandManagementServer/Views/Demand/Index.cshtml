@{
    ViewBag.CurrentMenu = "Demand";
}
<style>
    th {
        white-space: nowrap
    }
</style>

<div class="row">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">需求列表</h3>
            <div class="pull-right box-tools">
                <button id="btnAdd" title="" class="btn btn-primary" type="button" data-original-title="新增需求" data-toggle="tooltip" data-widget="">
                    <i class="fa fa-plus-circle"></i>&nbsp;&nbsp;新增
                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered table-hover dataTable" role="grid">
                <thead>
                <tr role="row">
                    <th tabindex="0" aria-label="">
                        需求编号
                    </th>
                    <th tabindex="0" aria-label="">
                        需求类别
                    </th>
                    <th tabindex="0" aria-label="">
                        需求描述
                    </th>
                    <th tabindex="0" aria-label="">
                        提出人
                    </th>
                    <th tabindex="0" aria-label="">
                        相关客户
                    </th>
                    <th tabindex="0" aria-label="">
                        提出时间
                    </th>
                    <th tabindex="0" aria-label="">
                        当前阶段
                    </th>
                    <th tabindex="0" aria-label="">
                        需求对齐
                    </th>
                    <th tabindex="0" aria-label="">
                        需求分析
                    </th>
                    <th tabindex="0" aria-label="">
                        版本计划
                    </th>
                    <th tabindex="0" aria-label="">
                        发布时间
                    </th>
                    <th tabindex="0" aria-label="">
                        备注
                    </th>
                    <th tabindex="0" style="width: 230px;" aria-label="">
                        操作
                    </th>
                </tr>
                </thead>
                <tbody id="tableBody"></tbody>
            </table>
        </div>
        <div class="pull-right">
            <ul id="pagination"></ul>
        </div>
    </div>
</div>
@Html.Partial("Edit")
@section scripts{
    <script src="~/js/demand.js"></script>
}
