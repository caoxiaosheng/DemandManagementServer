<div id="addMenu" tabindex="-1" class="modal fade in" aria-hidden="true">
    <div class="modal-dialog">
        <div class="box box-info">
            <div class="box-header with-border">
                <h5 class="box-title" id="Title"></h5>
                <button class="close" aria-label="Close" type="button" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
            </div>
            <form class="form-horizontal">
                <input type="hidden" id="Id"/>
                <input type="hidden" id="Action"/>
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Name">功能名称</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="Name" type="text" placeholder="功能名称">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Code">功能编码</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="Code" type="text" placeholder="功能编码">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Url">地址</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="Url" type="text" placeholder="链接地址">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Icon">功能图标</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="Icon" type="text" placeholder="功能图标">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="Remarks">功能描述</label>
                        <div class="col-sm-10">
                            <textarea id="Remarks" class="form-control" style="resize: vertical" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right box-tools">
                        <button id="btnSave" class="btn btn-primary" type="button">保存</button>
                        <button class="btn btn-default" type="button" data-dismiss="modal">取消</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>