@{
    ViewBag.CurrentMenu = "User";
}

<style>
    .badge-success {
        background-color: #5cb85c;
    }
    .badge-warning {
        background-color: #f0ad4e;
    }
</style>
<div class="row">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">用户管理</h3>
            <div class="pull-right box-tools">
                <button id="btnAdd" class="btn btn-primary" type="button" data-original-title="新增用户" data-toggle="tooltip" data-widget="">
                    <i class="fa fa-plus-square"></i>&nbsp;&nbsp;新增
                </button>
                <button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title="删除用户" data-toggle="tooltip" data-widget="">
                    <i class="fa fa-times"></i>&nbsp;&nbsp;删除
                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-striped table-bordered table-hover dataTable" role="grid" aria-describedby="sample_2_info">
                <thead>
                    <tr role="row">
                        <th style="width:40px;text-align:center;"><input id="checkAll" type="checkbox"></th>
                        <th tabindex="0" aria-label="">
                            用户名
                        </th>
                        <th tabindex="0" aria-label="">
                            用户姓名
                        </th>
                        <th tabindex="0" aria-label="">
                            邮箱
                        </th>
                        <th tabindex="0" aria-label="">
                            手机
                        </th>
                        <th tabindex="0" aria-label="">
                            备注
                        </th>
                        <th tabindex="0" aria-label="">
                            角色
                        </th>
                        <th tabindex="0" aria-label="">
                            上次登录时间
                        </th>
                        <th tabindex="0" aria-label="">
                            用户状态
                        </th>
                        <th tabindex="0" style="width: 230px;" aria-label="">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody id="tableBody"></tbody>
            </table>
            <div class="pull-right">
                <ul id="userPagination"></ul>
            </div>
        </div>
    </div>
</div>
@Html.Partial("Edit")
@section scripts{
    <script src="~/js/user.js"></script>
}

